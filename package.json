{
  "name": "cli-agent-openai-adapter",
  "version": "0.1.0",
  "description": "Adapter to convert CLI-based AI agents (Claude Code, etc.) to OpenAI-compatible API endpoints",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "cli-agent-openai-adapter": "dist/bin/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/bin/cli.ts",
    "start": "node dist/bin/cli.js",
    "watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "claude",
    "openai",
    "adapter",
    "cli",
    "ai",
    "agent",
    "langchain"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "strip-ansi": "^7.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.11",
    "@types/supertest": "^6.0.2",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
