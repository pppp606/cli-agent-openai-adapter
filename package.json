{
  "name": "cli-agent-openai-adapter",
  "version": "0.1.0",
  "description": "Adapter to convert CLI-based AI agents (Claude Code, etc.) to OpenAI-compatible API endpoints",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "cli-agent-openai-adapter": "dist/bin/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/bin/cli.ts",
    "start": "node dist/bin/cli.js",
    "watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "claude",
    "openai",
    "adapter",
    "cli",
    "ai",
    "agent",
    "langchain"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pppp606/cli-agent-openai-adapter.git"
  },
  "bugs": {
    "url": "https://github.com/pppp606/cli-agent-openai-adapter/issues"
  },
  "homepage": "https://github.com/pppp606/cli-agent-openai-adapter#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "strip-ansi": "^6.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.1.1",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "overrides": {
    "test-exclude": "^7.0.1"
  }
}
